  <body class="container">
   <form class="" action="/" method="post">
  <div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label">Email address</label>
  <input required  type="text"
        name="name"
        id="name" class="form-control"  placeholder="name@example.com">
</div>

 <br />
<div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label">Example textarea</label>
  <textarea  required  type="text"
        name="email"
        id="email" class="form-control" rows="2"></textarea>
</div>
 <br />
   <button class="btn btn-primary" type="submit">Submit Form</button>
    </form>
    
    
    
     
    
    

    <hr />
    <ul>
      <% if(users.length === 0) {%>

      <h1 class="text-center text-danger">no tasks found</h1>
      <% }else{ %> <% for(let user of users){%>
      <ul class="list-group">
      <li class="list-group-item">
        <h4><%= user.name %></h4>
        <h4><%= user.email %></h4>
        <a class="btn btn-danger" href="/delete/<%= user._id %> ">Delete : <%= user._id %> </a>
      </li>
      </ul>
      <% } %> <% } %>
    </ul>
  </body>
